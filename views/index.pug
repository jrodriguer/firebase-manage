doctype html
html
  head
    meta(charset='utf-8')
    title Send FCM Messages
    link(rel="stylesheet", href="/css/style.css")
    script(type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false")
  body
    form(id="msform" role="form" action="/send-fcm-message" method="POST")
      fieldset
        h2.fs-title Messaging
        h3.fs-subtitle Manage messaging campaigns with the new unified campaign experience.
        input(type="text" name="deviceToken" required)
        input(type="text" name="title"  id="title" placeholder="Type your title" required)
        textarea(type="text" name="message" id="message" cols="30", rows="10" placeholder="Type your message" required)
        input(id="btn", type="submit", name="submit", class="action-button", placeholder="Submit")
